<div id="footer" style="border-top: thick solid darkgray; height: 150px;">
    <div class="footer" style="overflow-y: scroll; bottom: 0px; width: 100%; height: 100%; background-color: #f5f5f5; padding: 5px;">
        <table class="table table-stripped" style="padding: 2px;">
            {% for message in view.game.messages %}
            <tr>
                <th style="white-space: nowrap; padding: 1px;">
                    {{message['time']|date('Y/m/d H:i:s')}}
                </th>
                <td style="padding: 1px;">
                    {% if message['undoTrace'] %}
                        {% embed 'BoardElements/ActionToken.twig' with 
                            {'action': {
                                'type' : 'tinyIcon' , 
                                'glyphicon' : 'backward' , 
                                'verb' : 'undoTrace' ,
                                'textStyle' : 'danger' , 
                                'description' : message['traceDescription'] , 
                            } }
                        %}
                        {% endembed %}
                    {% elseif message['bindProposal'] %}
                        <span class="glyphicon glyphicon-asterisk text-danger" title="{{message['traceDescription']}}"></span>
                    {% endif %}
                </td>
                <td style="color: {{message['colour']}}; width:100%; padding: 1px;">
                    {{message['text']}}
                </td>
            </tr>
            {% endfor %}
        </table>
    </div>
</div>
