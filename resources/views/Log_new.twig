<div id="footer" style="border-top: thick solid darkgray; height: 150px;">
    <div class="footer" style="overflow-y: scroll; bottom: 0px; width: 100%; height: 100%; background-color: #f5f5f5; padding: 5px;">
        <table class="table table-stripped" style="padding: 2px;">
            {% set undoDisplayed = false %}
            {% for message in view.game.messages %}
            <tr>
                <th style="white-space: nowrap; padding: 1px;">
                    {{message.getTime()|date('Y/m/d H:i:s')}}
                </th>
                <td style="padding: 1px;">
                    {% set traceDescription = message.getTraceDescription() %}
                    {% if not undoDisplayed and traceDescription %}
                        {% embed 'BoardElements/ActionToken.twig' with 
                            {'action': {
                                'type' : 'tinyIcon' , 
                                'glyphicon' : 'backward' , 
                                'verb' : 'undoTrace' ,
                                'textStyle' : 'danger' , 
                                'description' : traceDescription , 
                            } }
                        %}
                        {% endembed %}
                            {% set undoDisplayed = true %}
                    {% endif %}
                </td>
                <td style="color: {{message.getColour()}}; width:100%; padding: 1px;">
                    {{message.show(app.user.id , view.game.partiesNames)}}
                </td>
            </tr>
            {% endfor %}
        </table>
    </div>
</div>
